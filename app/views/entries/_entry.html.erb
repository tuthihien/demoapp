<li id="entries-<%=entry.id%>">
  <%= link_to gravatar_for(entry.user,size: 50),entry.user %>
 <!-- <span class="user"><%=link_to entry.user.name,entry.user %></span>-->
  <span class="title"><i><%= entry.title %></i></span>
  <span class="content">
    <%= link_to entry.content,entry_path(entry) %>
    <%= image_tag entry.picture.url if entry.picture? %>
  </span>
 
  
  <span class="timestamp">
  	Posted <%=time_ago_in_words(entry.created_at) %> ago
  </span>
  <%if logged_in? %>
     <% if current_user.following?(entry.user)||current_user==entry.user %>
       <%=link_to "Add a comment",entry_path(entry) %>
    <% end %>   
  <% end %>
 

</li>