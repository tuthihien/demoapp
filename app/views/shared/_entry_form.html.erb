<%= form_for(@entry) do |f| %>
<%= render 'shared/error_messages',object:f.object %>
 <div class="field">
 	<%=f.text_field :title,placeholder: "Compose a title" %>
 </div>
 <div class="field">
   <%=f.text_area :content,placeholder: "Compose new entry..." %>
 </div>
   <%= f.submit "Post",class: "btn btn-primary" %>
<% end %>